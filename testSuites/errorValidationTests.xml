<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel ="tests" name="Suite">
	
	
	<groups>
		<run>
			<include name="ErrorHandling"/>
		</run>
	</groups>
	
	<listeners>
		<listener class-name= "ATBAutomation.TestComponents.Listeners"/>
		</listeners>
	
  <test thread-count="5" name="StandAloneTest">
    <classes>
      <class name="ATBAutomation.TestCases.StandAloneTest"/>
     
    </classes>
     </test> 
    
    <test thread-count="5" name="ErrorValidations"> 
    <classes>
    
      <class name="ATBAutomation.TestCases.ErrorValidations"/>
      
    
    </classes>
    
  </test> <!-- Test -->
</suite> <!-- Suite -->
